<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <FrameLayout
            android:id="@+id/fl_index"
            android:name="com.comp5216.healthguard.activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_menuIcon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_index"
        android:layout_marginTop="-60dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_indexIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_index" />

            <ImageView
                android:id="@+id/iv_searchIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingTop="11dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/iv_notifyIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingBottom="12dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_notify" />


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/iv_chatIcon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_chat" />

                <TextView
                    android:id="@+id/portal_chat_budge"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </FrameLayout>

            <ImageView
                android:id="@+id/iv_settingIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_setting" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>