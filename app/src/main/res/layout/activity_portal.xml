<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@color/gray">

        <FrameLayout
            android:id="@+id/fl_index"
            android:name="comp5216.sydney.edu.au.a5216_v_00"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_menuIcon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_index"
        android:layout_marginTop="-60dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_indexIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_index" />

            <ImageView
                android:id="@+id/iv_searchIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_search"/>

            <ImageView
                android:id="@+id/iv_notifyIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_notify"/>

            <ImageView
                android:id="@+id/iv_chatIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_chat"/>

            <ImageView
                android:id="@+id/iv_settingIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_setting"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>